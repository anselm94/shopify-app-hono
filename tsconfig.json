{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "Node",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": ["WebWorker"],
    "types": ["jest", "node"],
    "paths": {
      "~middlewares/*": ["middlewares/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/test/*", "**/__tests__/*"]
}
